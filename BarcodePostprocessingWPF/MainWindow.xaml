<Window x:Class="BarcodePostprocessingWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BarcodePostprocessingWPF"
        mc:Ignorable="d"
        Title="Barcode Postprocessing" Height="760" Width="525"
		ResizeMode="NoResize" WindowStyle="ThreeDBorderWindow" Icon="barcode.ico">
    <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <StackPanel VerticalAlignment="Stretch">
            <Label Margin="10,10,10,10" FontSize="14">1) Sum files from Barcode Scanner</Label>
            <Label Margin="10,0,10,0" Content="Select Excel files to sum:" />
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10,10,10,10"  >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <ListBox Grid.Column="0" Height="80" Margin="0,0,10,0"></ListBox>
                <Button HorizontalAlignment="Stretch" Grid.Column="1" Height="36" VerticalAlignment="top" Name="BtnAddRawDataFiles" Click="BtnAddRawDataFiles_OnClick">
                    Add raw data files...
                </Button>
            </Grid>
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10,0,10,10"  >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button HorizontalAlignment="Stretch" Grid.Column="1" Height="36" Name="BtnSumFiles" Click="BtnSumFiles_OnClick">
                    Sum files and save as...
                </Button>
            </Grid>

            <Border BorderBrush="Tomato" BorderThickness="1" HorizontalAlignment="Stretch" Margin="10,10,10,10" VerticalAlignment="Stretch"/>

            <Label Margin="10,10,10,10" FontSize="14">2) Compare summed Barcode results with Official Stock</Label>
            <Label Margin="10,0,10,0" Content="Select summed and official stock Excel files:" />
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10,10,10,10"  >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <TextBox Margin="0,0,10,10" Grid.Column="0" Grid.Row="0" />
                <Button HorizontalAlignment="Stretch" Margin="0,0,0,10" Grid.Column="1" Grid.Row="0">
                    Select sum file...
                </Button>
                <TextBox Margin="0,0,10,0" Grid.Column="0" Grid.Row="1" />
                <Button HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="1">
                    Select stock file...
                </Button>
            </Grid>
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10,10,10,10"  >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button HorizontalAlignment="Stretch" Grid.Column="1" Height="36" Name="BtnCompareFiles" Click="BtnCompareFiles_OnClick">
                    Compare files and save as...
                </Button>
            </Grid>

            <Border BorderBrush="Tomato" BorderThickness="1" HorizontalAlignment="Stretch" Margin="10,10,10,10" VerticalAlignment="Stretch"/>

            <Label Margin="10,10,10,10" FontSize="14">3) Sum the compared files</Label>
            <Label Margin="10,0,10,0" Content="Select Excel files to sum:" />
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10,10,10,10"  >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <ListBox Grid.Column="0" Height="80" Margin="0,0,10,0"></ListBox>
                <Button HorizontalAlignment="Stretch" Grid.Column="1" Height="36" VerticalAlignment="top">
                    Add compared files...
                </Button>
            </Grid>
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10,0,10,10"  >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button HorizontalAlignment="Stretch" Grid.Column="1" Height="36">
                    Sum files and save as...
                </Button>
            </Grid>

            <StatusBar DockPanel.Dock="Bottom" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                <StatusBarItem HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                    <Grid HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label Name="StatusBarText0" Grid.Column="0" HorizontalAlignment="Stretch">Ready</Label>
                        <Label Name="StatusBarText1" Grid.Column="1" HorizontalAlignment="Stretch"></Label>
                        <Label Grid.Column="2" HorizontalAlignment="Right" Name="StatusButtonCopyright" MouseDoubleClick="StatusButtonCopyright_OnMouseDoubleClick" Foreground="#FF0000FD">(c) Christoph, 2016</Label>
                    </Grid>
                </StatusBarItem>
            </StatusBar>
        </StackPanel>
    </DockPanel>
</Window>
